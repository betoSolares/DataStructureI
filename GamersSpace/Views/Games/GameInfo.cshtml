@model GamersSpace.Models.Game

@{
    Layout = null;
    ViewBag.Title = "Game Information";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <h1>Gamers Space</h1>
    <form id="navigation" class="navigation">
        <input type="text" id="inputText" name="inputValue" placeholder="Id" />
        <input type="submit" class="button" name="FindGame" value="Buscar Juego" formmethod="post" formaction=@Url.Action("GameInfo") />
        <input type="submit" class="button" name="ModifyGame" value="Modificar Juego" formmethod="post" formaction=@Url.Action("ModifyGame") />
        <button type="submit" class="button" name="ShowGames">Juegos por puntuacion</button>
        <button type="submit" class="button" name="ShowGames">Juegos por ID</button>
    </form>
    @Scripts.Render("~/bundles/script")
    <h2>Informacion del juego</h2>
    <p>Nombre: @Model.name</p>
    <p>Desarrollador: @Model.publisher</p>
    <p>Calificacion: @Model.rating</p>
    <p>Año de lanzamiento: @Model.release</p>
    <p>Genero: @Model.genre</p>
</body>
</html>
